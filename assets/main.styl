//text
a
  text-decoration: none
  color: inhert
  &:hover
    color: inhert
  &:visited
    color: inherit

//button
.shadow {
  box-shadow: 1px 2px 1px rgba(12,13,14,0.1), 1px 1px 6px rgba(59,64,69,0.1)
}

.btn {
  cursor: pointer
}

.btn:hover {
  filter: brightness(1.1)
}

.btn:active {
  filter: brightness(0.9)
}

.btn:disabled,
.btn.is-disabled {
  opacity: .5
}

$baseSize= 1em
$range= 1..5

for $num in $range
  .m{$num}
    margin $num * $baseSize

  .mt{$num}
    margin-top $num * $baseSize

  .mb{$num}
    margin-bottom $num * $baseSize

  .ml{$num}
    margin-left $num * $baseSize

  .mr{$num}
    margin-right $num * $baseSize

  .mx{$num}
    margin-left $num * $baseSize
    margin-right $num * $baseSize

  .my{$num}
    margin-top $num * $baseSize
    margin-bottom $num * $baseSize

for $num in $range
  .p{$num}
    padding $num * $baseSize

  .pt{$num}
