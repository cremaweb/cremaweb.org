.container {
  margin 0 auto
}

.event{
  text-align: left
  border-radius: 4px
  box-shadow: 0 0 10px rgba(0,0,0,.095)
  margin-bottom: 20px
  box-sizing: border-box
  transition: transform 200ms cubic-bezier(.374,.019,.035,1.861),-webkit-transform 200ms cubic-bezier(.374,.019,.035,1.861)
}

.event:hover{
  transform: scale(1.035)
}

.link {
  color: inherit
  text-decoration: none
}

.date {
  text-align: center
}

.content{
  padding-left: 15px
}

.content p.title {
  margin-block-start: 14px
  margin-block-end: 14px
  text-align: center
}

.register {
  text-align: center
}

@media (min-width: 50em) {
  .event {
    padding: 15px 20px
  }

  .register {
    text-align: right
    margin: 0
  }
}

@media (max-width: 50em) {
  .register {
    margin: 15px !important
  }
}

