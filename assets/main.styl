body {
  width: 100%;
  height: 100%
  text-align: center
  margin: 0 auto
  font-family: Avenir, SansSerif
  color: #292929
  background-color: #ffffff
}

.parallax {
    /* The image used */
    background-image: url("/crema.jpg")

    /* Set a specific height */
    height: 100%

    /* Create the parallax scrolling effect */
    background-repeat: no-repeat
    background-size: cover
  }

@media (min-width: 50em) {

  .parallax {
    background-position: center
  }

  .parallax-img {
    display: none
  }

  .logo img {
    top: 5%
    left: 5%
    position: absolute
    width: 15em
    z-index: 10
  }

  .header {
    min-height: 13em
  }
}

@media (max-width: 50em) and (orientation : landscape) {

  .logo img {
    top: 2%
    left: 2%
    position: absolute
    width: 10em
    z-index: 10
  }

  .parallax-img {
    background-image: url("/crema.png")
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    z-index: -1
    overflow: hidden
  }
}

@media (max-width: 50em) and (orientation: portrait){
  .logo img {
    width: 15em
    z-index: 10
  }

  .parallax-img {
    background-image: url("/crema.png")
    position: fixed
    top: 0px
    left: -50%
    height: 100vh
    z-index: -1
  }
}

